def getDigit(inte,t):
	inte = abs(inte)
	if t > len(str(inte)):
		return 'Invalid Number'
	inte = str(inte)
	inte = inte[::-1]
	print(int(inte[t]))
	inte = inte[::-1]
	inte = int(inte)
	
def getDigitv2(num,i):
	num = abs(num)
	if i > len(str(num)):
		return 'Invalid Number'
	return (int((num/(10**i))%10)//1)
